<h1>Edit Form</h1>

<% include ../partials/header %>
<div class="container">
    <div class="row">
<h1 class="text-center">Edit <%= portfoliosVar.name %></h1>
<div style="width : 30%; margin:25px auto">
<form action="/portfolios/<%= portfoliosVar._id %>?_method=PUT" method="POST">
    <div class="form-group">
    <input class="form-control" type="text" name="portfolio[name]" value="<%=portfoliosVar.name%>">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="portfolio[image]" value="<%=portfoliosVar.image%>">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="portfolio[link]" value="<%= portfoliosVar.link %>">
    </div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
</form>
</div>
</div>
<a href="/portfolios">Go Back</a>
</div>
<% include ../partials/footer %>